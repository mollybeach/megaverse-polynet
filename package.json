{
    "name": "megaverse-universe",
    "version": "0.1.0",
    "description": "A React-based application that creates a new 'Megaverse' by minting an X-shaped pattern of POLYanets using a RESTful API.",
    "homepage": "https: //megaverse-universe.pages.dev/",
    "author": "mollybeach",
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/mollybeach/megaverse-universe.git"
    },
    "engines": {
        "node": "20.11.0",
        "pnpm": "9.14.2"
    },
    "scripts": {
        "clean": "rm -rf .next cache",
        "dev": "next dev",
        "build": "npm run clean && next build",
        "pages:build": "npm run clean && npx @cloudflare/next-on-pages",
        "preview": "npm run pages:build && wrangler pages dev .next",
        "deploy": "npm run pages:build && wrangler pages deploy .next",
        "deploy:clean": "npm run clean && vercel --prod"
    },
    "license": "MIT",
    "dependencies": {
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/react-slot": "^1.1.0",
        "axios": "^1.7.7",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "lucide-react": "^0.460.0",
        "next": "15.0.3",
        "next-themes": "^0.4.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^2.5.4",
        "zustand": "^5.0.1"
    },
    "devDependencies": {
        "@cloudflare/next-on-pages": "^1.13.5",
        "@types/node": "^20.17.8",
        "@types/react": "^18",
        "@types/react-dom": "^18.3.1",
        "autoprefixer": "^10.4.20",
        "eslint": "^8",
        "eslint-config-next": "15.0.3",
        "postcss": "^8",
        "tailwindcss": "^3.4.15",
        "typescript": "^5",
        "vercel": "^39.1.1",
        "wrangler": "^3.90.0"
    }
}